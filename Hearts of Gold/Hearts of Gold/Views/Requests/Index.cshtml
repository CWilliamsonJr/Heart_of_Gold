@model IEnumerable<Hearts_of_Gold.Models.Request>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Donation_Location.BusinessName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.Item1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemPickedUp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if (ViewBag.userID == item.User.UserID)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Donation_Location.BusinessName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Item1)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ItemPickedUp)*@
                @if (item.ItemPickedUp)
                {
                    <text>Yes</text>
                }
                else
                {
                    <b>No</b>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RequestID }) |
                @Html.ActionLink("Details", "Details", new { id = item.RequestID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RequestID })
            </td>
        }
    </tr>
}

</table>
